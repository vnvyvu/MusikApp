<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dp_10">

    <ImageView
        android:id="@+id/imageThumbnail"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_90"
        android:src="@drawable/ic_sharp_add_a_photo_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="@string/text_thumbnail"
        app:layout_constraintWidth_percent="0.3"
        android:maxWidth="@dimen/dp_120" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imageThumbnail"
        app:layout_constraintLeft_toRightOf="@id/imageThumbnail"
        app:layout_constraintRight_toLeftOf="@id/buttonPlayOrPause"
        app:layout_constraintWidth_percent="0.5"
        android:lines="@integer/integer_2"
        android:ellipsize="end"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/textTitle"
        app:layout_constraintLeft_toRightOf="@id/imageThumbnail"
        app:layout_constraintRight_toLeftOf="@id/buttonPlayOrPause"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/textDuration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_10"
        app:layout_constraintTop_toBottomOf="@id/textAuthor"
        app:layout_constraintBottom_toBottomOf="@+id/imageThumbnail"
        app:layout_constraintLeft_toRightOf="@id/imageThumbnail"
        app:layout_constraintRight_toLeftOf="@id/buttonPlayOrPause"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintVertical_bias="0.9" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonPlayOrPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        app:iconPadding="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:icon="@drawable/ic_baseline_play_arrow_24"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        app:iconPadding="0dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlayOrPause"
        app:layout_constraintRight_toRightOf="parent"
        app:icon="@drawable/ic_outline_cloud_download_24"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
</androidx.constraintlayout.widget.ConstraintLayout>
